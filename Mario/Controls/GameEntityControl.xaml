<UserControl 
	x:Class="Mario.Controls.GameEntityControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:local="clr-namespace:Mario.Controls"
	mc:Ignorable="d" 
	Height="100"
	Width="100"
	Background="#02FFFFFF"
	MouseDown="UserControl_MouseDown" MouseUp="UserControl_MouseUp" MouseMove="UserControl_MouseMove">

	<Border x:Name="Border" BorderThickness="0" BorderBrush="Yellow">
		<Canvas>
			
			<Image x:Name="Image"  />
			<local:LeftBoundryIndicator x:Name="LeftIndicator" Width="50" Visibility="Collapsed" />
			<local:RightBoundryIndicator x:Name="RightIndicator" Width="50" Visibility="Collapsed"/>
		</Canvas>
	</Border>

</UserControl>
